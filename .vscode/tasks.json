{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Cmake SEAL Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-DCMAKE_BUILD_TYPE=debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}/SEAL"
            }
        },
        {
            "label": "Make seal",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/SEAL"
            }
        },
        {
            "label": "Build project",
            "type": "shell",
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}